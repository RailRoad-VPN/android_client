<configuration>
  <appender class="ch.qos.logback.classic.android.LogcatAppender" name="logcat">
    <tagEncoder>
      <pattern>%logger{12}</pattern>
    </tagEncoder>
    <encoder>
      <pattern>[%-20thread] %msg</pattern>
    </encoder>
  </appender>
  <root level="DEBUG">
    <appender-ref ref="logcat"/>
  </root>
</configuration>