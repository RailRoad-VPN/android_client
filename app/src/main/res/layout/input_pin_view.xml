<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_pin_bg_cartoon"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/enter_pin_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="@string/enter_pin_welcome"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:typeface="sans" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <net.rroadvpn.activities.pin.PinView
                android:id="@+id/pinView"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:cursorVisible="false"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/text_colors" />

        </RelativeLayout>

        <TextView
            android:id="@+id/enter_pin_new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/enter_pin_new_user"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/design_default_color_primary"
            android:textSize="15sp" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/input_pin_help_text"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n1_get_pin_code_n2_n3_n4_generate_pin_code"
            android:padding="10dp"
            android:width="290dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

    </LinearLayout>
</RelativeLayout>